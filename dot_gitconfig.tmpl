{{- if not .type -}}
; This file is generated using a dotfiles manager called chezmoi,
; and uses 1Password to store and retrieve sensitive information to populate this file.
; Since "{{- .chezmoi.hostname -}}" is not among the listed hostnames stored in 1Password,
; chezmoi will not output any other configs to this file.
{{ else }}


[user]
  userConfigOnly = true
  name = "{{- .name -}}"
  email = "{{- .email -}}"
  signingKey = "{{- .signingKey -}}"

[gpg]
  program = /opt/homebrew/bin/gpg
  gpgsign = true
; format = ssh

; TODO: 1Password SSH signing along sidde GPG
; [gpg "ssh"]
;   program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign

[commit]
  gpgsign = true

[core]
  {{- if .work }}
  hooksPath = "{{- .hooksPath -}}"
  {{ end }}
  pager = delta
  editor = nvim
  symlinks = false

{{ onepasswordRead (printf "op://dotfiles/%s/git/urls" .type) .opAccount }}

[init]
  defaultBranch = main

[status]
  showStash = true

[log]
;  showSignature = true

[color]
  ui = true
  pager = true

[fetch]
  prune = true

[pager]
  status = true

[interactive]
  diffFilter = delta --color-only --features=interactive

[delta]
  navigate = true
  light = false
  features = decorations
  side-by-side = true

[delta "interactive"]
  keep-plus-minus-markers = true

[delta "decorations"]
  commit-decoration-style = blue ol
  hunk-header-decoration-style = blue box
  hunk-header-file-style = red
  hunk-header-line-number-style = "#067a00"
  hunk-header-style = file line-number syntax

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default

[filter "lfs"]
  process = git-lfs filter-process
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f


# -----------------------------------------
# Dracula Dark Theme
[color]
  ui = auto
[color "branch"]
  current = cyan bold reverse
  local = white
  plain =
  remote = cyan
[color "diff"]
  commit =
  func = cyan
  plain =
  whitespace = magenta reverse
  meta = white
  frag = cyan bold reverse
  old = red
  new = green
[color "grep"]
  context =
  filename =
  function =
  linenumber = white
  match =
  selected =
  separator =
[color "interactive"]
  error =
  header =
  help =
  prompt =
[color "status"]
  added = green
  changed = yellow
  header =
  localBranch =
  nobranch =
  remoteBranch = cyan bold
  unmerged = magenta bold reverse
  untracked = red
  updated = green bold
# -----------------------------------------

{{ end }}
